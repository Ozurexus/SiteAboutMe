{
  "compilerOptions": {
    "target": "es2017",
    //"module": "esnext",
    //"module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": ".",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmitHelpers": false
  },
  "include": ["src/main.ts"],
  "exclude": ["node_modules"]
}
